{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(Sub|If|While|For(\\s+\\w+\\s*=\\s*\\w+\\s+to\\s+\\w+(?:\\s+Step\\s+\\w+)?)?)\\b.*$",
        "decreaseIndentPattern": "^\\s*(End Sub|End If|EndIf|Wend|Next)\\b.*$"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    },
    "autoCloseBefore": ";:.,=)> \n\t",
    "electricCharacterSupport": {
        "brackets": ["(", ")"]
    }
}